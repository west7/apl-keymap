{
  "name": "apl-keymap",
  "displayName": "APL Keymap",
  "description": "Add keyboard shortcuts for the APL Glyphs using a combination of characters and Tab.",
  "publisher": "GuilhermeWestphall",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": ""
  },
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:apl"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "apl-keymap.helloWorld",
        "title": "Hello World"
      }
    ],
    "keybindings": [
      {
        "command": "apl-keymap.executeGlyph",
        "key": "tab",
        "mac": "tab",
        "when": "editorTextFocus && !editorHasSelection && editorLangId == 'apl'"
      }
    ],
    "languages": [
      {
        "id": "apl",
        "extensions": [".apl"],
        "aliases": ["APL", "apl"]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.101.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
